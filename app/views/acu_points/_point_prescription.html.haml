.child
  .field
    = f.label :pattern_name, "Pattern"
    = f.text_field :pattern_name
  - if f.object.new_record?
    .field
      = f.label :commentary, "Commentary"
      %br
      = f.text_area :commentary
    .field
      = f.label :pp_acu_points_text, "Point Prescription Acu Points"
      %br/
      = f.text_area :pp_acu_points_text, :rows => 12, :cols => 100
    .field
      != edit_citation f
  - else
    = show_box_for f.object, "Edit Details"
    = detail_box_for f.object do
      .field
        = f.label :commentary, "Commentary"
        %br
        = f.text_area :commentary
      .field
        = f.label :pp_acu_points_text, "Point Prescription Acu Points"
        %br/
        = f.text_area :pp_acu_points_text, :rows => 12, :cols => 100
      .field!= edit_citation f

  = remove_child_link 'remove', f

