- link_to textbooks_path(citation.textbook, :action => :edit) do
  <= citation.textbook.title
  - unless citation.textbook.year.nil? && citation.author.nil?
    <= "(#{[citation.author.name, citation.textbook.year].delete_if{|v| v.nil?}.join(', ')})"
- unless citation.where.empty?
  , #{citation.where}