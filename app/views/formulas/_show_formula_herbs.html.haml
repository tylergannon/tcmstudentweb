- formula_herbs.each do |formula_herb|
  %tr
    - if formula_herb == formula_herbs[0]
      %td{'rowspan' => formula_herbs.size}=formula_herb.formula_role.pinyin
    %td{'width' => '100px'}=link_to formula_herb.herb.pinyin, formula_herb.herb
    %td=formula_herb.herb.herb_category_name
    %td{'width' => '100px'}=formula_herb.dose
    %td #{formula_herb.commentary}
        
