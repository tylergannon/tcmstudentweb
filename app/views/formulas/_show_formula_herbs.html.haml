- formula_herbs.each do |formula_herb|
  %tr
    - if formula_herb == formula_herbs[0]
      %td.formula_herbs{'rowspan' => formula_herbs.size}=formula_herb.formula_role.pinyin
    %td.formula_herbs=link_to formula_herb.herb.pinyin, formula_herb.herb
    %td.formula_herbs=formula_herb.herb.herb_category_name
    %td.formula_herbs=formula_herb.dose
    %td.formula_herbs
      :textile
        #{formula_herb.commentary}
