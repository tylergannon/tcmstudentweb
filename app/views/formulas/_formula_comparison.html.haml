.child
  %p
    Both formulas:
  %br
  = f.text_area :commentary, :rows => 3, :cols => 60
  %p
    %b
      This formula:
    %br
    = f.text_area :formula1_commentary, :rows => 3, :cols => 60
  %p
    Vs:
    != f.text_field_with_auto_complete :formula2_pinyin, {}, { :url => formulas_path(:format => :js), :method => :get, :skip_style => true, :with => "'search='+element.value" }
    = f.text_area :formula2_commentary, :rows => 3, :cols => 60
  %b
  = f.hidden_field :_destroy, :class => 'delete'
  = remove_child_link 'remove', f
  = render :partial => 'citations/edit_citation', :locals => {:f => f, :field => :citation}

