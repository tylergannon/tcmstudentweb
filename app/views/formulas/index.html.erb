<h1>Listing formulas</h1>

<table>
  <tr>
    <th>Pinyin</th>
    <th>English</th>
    <th>Preparation</th>
    <th>Commentary</th>
  </tr>

<% @formulas.each do |formula| %>
  <tr>
    <td><%=h formula.pinyin %></td>
    <td><%=h formula.english %></td>
    <td><%=h formula.preparation %></td>
    <td><%=h formula.commentary %></td>
    <td><%= link_to 'Show', formula %></td>
    <td><%= link_to 'Edit', edit_formula_path(formula) %></td>
    <td><%= link_to 'Destroy', formula, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New formula', new_formula_path %>