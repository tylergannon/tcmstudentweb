.child
  %table
    %tr
      %td
        Pinyin:
        != f.text_field_with_auto_complete :herb_pinyin, {}, { :url => herbs_path(:format => :js), :method => :get, :skip_style => true,	:with => "'search='+element.value" }
      %td Role #{f.collection_select :formula_role_id, FormulaRole.all, :id, :pinyin}
      %td Dose #{f.text_field :dose, :length => 10}
      %td
        %p Commentary
        = f.text_area :commentary, :rows => "2", :cols=> 14
      %td= remove_child_link 'remove', f
