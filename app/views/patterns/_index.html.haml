%h1 Patterns of Disharmony

%h2 Tags

- tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class|
  != index_link('patterns', tag.name, {:tag=>tag.name}, :class=>css_class)
  %br/
%hr/
%h2 Primary Patterns
- tag_cloud(@primary_patterns, %w(css1 css2 css3 css4)) do |tag, css_class|
  != index_link 'patterns', tag.name, {:tag=>tag.name, :context=>'primary_patterns'}, :class=>css_class
  %br/
%hr/
%h2 Diseases
- tag_cloud(@diseases, %w(css1 css2 css3 css4)) do |tag, css_class|
  != link_to 'patterns', tag.name, {:tag=>tag.name, :context=>'diseases'}, :class => css_class
  %br/

%ul
  - @patterns.each do |pattern|
    %li
      (#{short_citation(pattern.citation)})
      != show_link pattern, pattern.name
      != edit_link @pattern
      != destroy_link @pattern

%br/
!= new_link Pattern

