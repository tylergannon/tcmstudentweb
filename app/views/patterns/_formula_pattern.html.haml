.child
  %p
    = f.label :formula_pinyin, "Formula"
    %br
    != f.text_field_with_auto_complete :formula_pinyin, {}, { :url => formulas_path(:format => :js), :method => :get, :skip_style => true, :with => "'search='+element.value" }

  %p
    = render :partial => 'citations/edit_citation', :locals => {:f => f, :field => :citation}
  %p
    = f.hidden_field :_destroy, :class => 'delete'
    = remove_child_link 'remove', f
