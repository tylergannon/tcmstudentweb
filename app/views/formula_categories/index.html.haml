- title "Formula Categories"

%ul#formula_categories
  - @formula_categories.each do |category|
    %li[category]
      %span.handle [drag]
      != link(category)
      %br/
      != link_to("Edit", edit_formula_category_path(category))
      != "/" + link_to( "Destroy", category, :confirm => 'Are you sure?', :method => :delete)


= sortable_element("formula_categories", :url => sort_formula_categories_path, :handle => "handle")
%p
  = link_to "New Formula Category", new_formula_category_path
