.child
  %p
    %b
      This herb:
    %br
    = f.text_area :herb1_commentary, :rows => 3, :cols => 60
  %div
    Vs:
    != f.text_field_with_auto_complete :herb2_pinyin, {}, { :url => herbs_path(:format => :js), :method => :get, :skip_style => true, :with => "'search='+element.value" }
    = f.text_area :herb2_commentary, :rows => 3, :cols => 60
  %b
    Both herbs:
  %br
  = f.text_area :commentary, :rows => 3, :cols => 60
  = f.hidden_field :_destroy, :class => 'delete'
  = remove_child_link 'remove', f
